# Sunny MCP Server Configuration
# Copy this file to .env and adjust values as needed

# Logging
SUNNY_LOG_LEVEL=INFO

# Snapshot Configuration
SUNNY_SNAPSHOT_DIR=~/.sunny/snapshots
SUNNY_MAX_SNAPSHOTS=50
SUNNY_MAX_AGE_HOURS=24

# Transport Layer
SUNNY_TCP_HOST=127.0.0.1
SUNNY_TCP_PORT=9000
SUNNY_UDP_PORT=9001

# Ableton Connection
SUNNY_ABLETON_HOST=127.0.0.1
SUNNY_ABLETON_PORT=11000
