# EditorConfig - https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML configuration
[*.{yaml,yml}]
indent_size = 2

# TOML configuration
[*.toml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4

# Remote Script (Ableton Python)
[Sunny.RemoteScript/*.py]
indent_size = 4
